<Window x:Class="Ink_pad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ink_pad"
        mc:Ignorable="d"
        Title="Ink pad" Height="550" Width="370" Background="LightGray">
    <Grid>
        <InkCanvas Name="inkCanvas1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="LightYellow"/>
        <Button Name="button1" Content="Clear" HorizontalAlignment="Left" Margin="55,39,0,0" VerticalAlignment="Top" Click="button1_Click"/>
        <Button Name="button2" Content="Close" HorizontalAlignment="Left" Margin="153,49,0,0" VerticalAlignment="Top" Click="button2_Click"/>

    </Grid>
</Window>
