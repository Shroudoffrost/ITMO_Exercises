        <TextBox Name="tb_name" HorizontalAlignment="Left"
                 Margin="213,74,0,0"
                 TextWrapping="Wrap"
                 Text=""
                 VerticalAlignment="Top"
                 Width="120" Height="18"
                 TextChanged="tb_name_TextChanged"/>
        <TextBox x:Name="myTextBox"
                 Width="170"
                 Canvas.Top="12"
                 Canvas.Left="90"
                 />
        <Label Name="label_name"
               Content="nothing here yet"
               HorizontalAlignment="Left"
               Margin="213,122,0,0"
               VerticalAlignment="Top"
               RenderTransformOrigin="0,0" Height="26" Width="206"/>

    </Canvas>
</Window>
